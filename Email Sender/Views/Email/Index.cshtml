
@model EmailViewModel

<style>
 
</style>
<form method="post" id="mailform" asp-action="SaveEmail"> 

    <div class="form-group ">
        <label asp-for="subject">Subject</label>
        <input style="width:40%;font-weight:bold" type="text" class="form-control subject " asp-for="subject" aria-describedby="emailHelp" placeholder="Enter Subject">
        <span asp-validation-for="subject" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="message">Message</label>
        <textarea  class="form-control w-50" asp-for="message" placeholder="Message" >
         </textarea>
        <span asp-validation-for="message" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary " onclick="Save(event)"><i class="bi bi-database-add"></i>Submit</button>
</form>



<div class="list-group mt-4">

        <button type="button" class="list-group-item list-group-item-action active">
            Subject
        </button>

    @foreach (var item in ViewBag.subjects)
    {
        <button type="button" class="list-group-item list-group-item-action mysubject"><i class="bi bi-envelope-at"></i> @item</button>
    }

</div>

